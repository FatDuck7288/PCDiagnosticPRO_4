<Window x:Class="PCDiagnosticPro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:PCDiagnosticPro.ViewModels"
        xmlns:conv="clr-namespace:PCDiagnosticPro.Converters"
        xmlns:ctrl="clr-namespace:PCDiagnosticPro.Controls"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="PC Diagnostic Pro" 
        Height="800" Width="1100"
        MinHeight="700" MinWidth="900"
        Background="{StaticResource BackgroundDarkBrush}"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <conv:StatusToColorConverter x:Key="StatusToColor"/>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <conv:GradeToColorConverter x:Key="GradeToColor"/>
        <conv:InverseBoolConverter x:Key="InverseBool"/>
        <conv:ProgressToBlurConverter x:Key="ProgressToBlur"/>
        <conv:ProgressToOpacityConverter x:Key="ProgressToOpacity"/>
        <conv:ProgressToArcConverter x:Key="ProgressToArc"/>
        <conv:HealthSeverityToColorConverter x:Key="SeverityToColor"/>
        <conv:HealthSeverityToIconConverter x:Key="SeverityToIcon"/>
        <conv:ScoreToHealthColorConverter x:Key="ScoreToHealthColor"/>
        <conv:HealthSeverityToAlertVisibilityConverter x:Key="SeverityToAlertVisibility"/>
        <conv:HexToSolidColorBrushConverter x:Key="HexToColorBrush"/>
        <sys:Double x:Key="CompactPanelHeight">140</sys:Double>
        
        <!-- Style pour texte sÃ©lectionnable et copiable dans les tableaux -->
        <Style x:Key="SelectableTextStyle" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Cursor" Value="IBeam"/>
            <Setter Property="ContextMenu">
                <Setter.Value>
                    <ContextMenu>
                        <MenuItem Header="Copier" Command="ApplicationCommands.Copy"/>
                        <MenuItem Header="Tout sÃ©lectionner" Command="ApplicationCommands.SelectAll"/>
                    </ContextMenu>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SelectableTextSecondaryStyle" TargetType="TextBox" BasedOn="{StaticResource SelectableTextStyle}">
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- BARRE LATERALE GAUCHE -->
        <Border Grid.Column="0" Background="{StaticResource BackgroundMediumBrush}" 
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0">
            <StackPanel VerticalAlignment="Top" Margin="0,20,0,0">
                
                <!-- Logo -->
                <Border Width="50" Height="50" CornerRadius="25" 
                        Background="{StaticResource AccentRedBrush}" Margin="0,0,0,30"
                        HorizontalAlignment="Center">
                    <TextBlock Text="âš¡" FontSize="24" HorizontalAlignment="Center" 
                               VerticalAlignment="Center" Foreground="White"/>
                </Border>

                <!-- Bouton Accueil -->
                <Button Width="50" Height="50" Margin="0,5" Padding="0" 
                        ToolTip="{Binding NavHomeTooltip}" Cursor="Hand"
                        Command="{Binding NavigateToScannerCommand}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource FuturisticButton}">
                            <Setter Property="Background" Value="{StaticResource BackgroundLightBrush}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsScannerView}" Value="True">
                                    <Setter Property="Background" Value="{StaticResource AccentRedBrush}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <TextBlock Text="ðŸ " FontSize="20"/>
                </Button>

                <!-- Bouton Scan -->
                <Button Width="50" Height="50" Margin="0,5" Padding="0" 
                        ToolTip="{Binding NavScanTooltip}" Cursor="Hand"
                        Command="{Binding NavigateToHealthcheckCommand}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource FuturisticButton}">
                            <Setter Property="Background" Value="{StaticResource BackgroundLightBrush}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsHealthcheckView}" Value="True">
                                    <Setter Property="Background" Value="{StaticResource AccentRedBrush}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <TextBlock Text="ðŸ”" FontSize="20"/>
                </Button>
                
                <!-- Bouton Rapports -->
                <Button Width="50" Height="50" Margin="0,5" Padding="0" 
                        ToolTip="{Binding NavReportsTooltip}" Cursor="Hand"
                        Command="{Binding NavigateToResultsCommand}"
                        IsEnabled="{Binding HasAnyScan}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource FuturisticButton}">
                            <Setter Property="Background" Value="{StaticResource BackgroundLightBrush}"/>
                            <Setter Property="Opacity" Value="0.4"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsResultsView}" Value="True">
                                    <Setter Property="Background" Value="{StaticResource AccentRedBrush}"/>
                                    <Setter Property="Opacity" Value="1"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding HasAnyScan}" Value="True">
                                    <Setter Property="Opacity" Value="1"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <TextBlock Text="ðŸ“Š" FontSize="20"/>
                </Button>
                
                <!-- Bouton Parametres -->
                <Button Width="50" Height="50" Margin="0,5" Padding="0" 
                        ToolTip="{Binding NavSettingsTooltip}" Cursor="Hand"
                        Command="{Binding NavigateToSettingsCommand}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource FuturisticButton}">
                            <Setter Property="Background" Value="{StaticResource BackgroundLightBrush}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsSettingsView}" Value="True">
                                    <Setter Property="Background" Value="{StaticResource AccentRedBrush}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <TextBlock Text="âš™ï¸" FontSize="20"/>
                </Button>
            </StackPanel>
        </Border>

        <!-- ZONE PRINCIPALE â€” ClipToBounds=False pour permettre le glow des Ã©lÃ©ments -->
        <Grid Grid.Column="1" Margin="30" ClipToBounds="False">
            
            <!-- VUE HOME -->
            <Grid Visibility="{Binding IsScannerView, Converter={StaticResource BoolToVisibility}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,0,0,40" HorizontalAlignment="Center">
                    <Grid>
                        <TextBlock Text="{Binding HomeTitle}" FontSize="32" FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimaryBrush}" TextAlignment="Center">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2" Opacity="0.6"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock Text="{Binding HomeTitle}" FontSize="32" FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimaryBrush}" TextAlignment="Center">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="{StaticResource AccentRed}" BlurRadius="30" ShadowDepth="0" Opacity="0.9"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </Grid>
                    <TextBlock Text="{Binding HomeSubtitle}" FontSize="16"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,10,0,0"
                               TextAlignment="Center"/>
                </StackPanel>

                <UniformGrid Grid.Row="1" Columns="2">
                    <!-- Carte Scan -->
                    <Border Margin="15" Cursor="Hand" Style="{StaticResource CardStyle}">
                        <Border.InputBindings>
                            <MouseBinding MouseAction="LeftClick" Command="{Binding NavigateToHealthcheckCommand}"/>
                        </Border.InputBindings>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="40">
                            <TextBlock Text="âš¡" FontSize="64" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                            <TextBlock Text="{Binding HomeScanTitle}" FontSize="28" FontWeight="Bold" 
                                       Foreground="{StaticResource TextPrimaryBrush}" 
                                       HorizontalAlignment="Center" Margin="0,0,0,15"/>
                            <TextBlock Text="{Binding HomeScanAction}" FontSize="12" FontWeight="SemiBold"
                                       Foreground="{StaticResource AccentRedBrush}"
                                       HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding HomeScanDescription}" 
                                       FontSize="14" Foreground="{StaticResource TextSecondaryBrush}"
                                       TextWrapping="Wrap" TextAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Carte Chat -->
                    <Border Margin="15" Cursor="Hand" Style="{StaticResource CardStyle}">
                        <Border.InputBindings>
                            <MouseBinding MouseAction="LeftClick" Command="{Binding NavigateToChatCommand}"/>
                        </Border.InputBindings>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="40">
                            <TextBlock Text="ðŸ¤–" FontSize="64" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                            <TextBlock Text="{Binding HomeChatTitle}" FontSize="28" FontWeight="Bold" 
                                       Foreground="{StaticResource TextPrimaryBrush}" 
                                       HorizontalAlignment="Center" Margin="0,0,0,15"/>
                            <TextBlock Text="{Binding HomeChatAction}" FontSize="12" FontWeight="SemiBold"
                                       Foreground="{StaticResource AccentRedBrush}"
                                       HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding HomeChatDescription}" 
                                       FontSize="14" Foreground="{StaticResource TextSecondaryBrush}"
                                       TextWrapping="Wrap" TextAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>
            </Grid>

            <!-- VUE HEALTHCHECK â€” Grid parfait, anneau non coupÃ©, live feed repensÃ© -->
            <Grid Visibility="{Binding IsHealthcheckView, Converter={StaticResource BoolToVisibility}}"
                  ClipToBounds="False">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="400"/>
                    <ColumnDefinition Width="280"/>
                </Grid.ColumnDefinitions>

                <!-- Colonne gauche : grille 3 lignes -->
                <!-- MARGIN RÃ‰DUITE EN HAUT pour laisser place au glow de l'anneau -->
                <Grid Grid.Column="0" Margin="24,0,20,20" ClipToBounds="False">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100"/>
                        <RowDefinition Height="Auto"/>
                        <!-- MinHeight=480 pour conteneur ring 450px (RequiredRingSize V2) + marge verticale -->
                        <RowDefinition Height="*" MinHeight="480"/>
                    </Grid.RowDefinitions>

                    <!-- ROW 0: Live feed avec pluie de 0/1 en fond, texte au-dessus -->
                    <Border Grid.Row="0" Background="#161B22" CornerRadius="6" Padding="12,8"
                            BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                            Margin="0,0,0,12">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" FontWeight="SemiBold" FontSize="11" Margin="0,0,0,6"
                                       Foreground="{StaticResource AccentRedBrush}" VerticalAlignment="Center">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="ðŸ“¡ {0}">
                                        <Binding Path="LiveFeedLabel"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                            <Grid Grid.Row="1" ClipToBounds="True">
                                <!-- Live feed simplifiÃ© (pluie binaire supprimÃ©e) -->
                                <ListBox ItemsSource="{Binding FilteredLiveFeedItems}"
                                         Background="Transparent" BorderThickness="0"
                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                                         FontFamily="Consolas" FontSize="10"
                                         Padding="0,2"
                                         VirtualizingPanel.IsVirtualizing="True"
                                         VirtualizingPanel.VirtualizationMode="Recycling">
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                            <Setter Property="Padding" Value="0,2"/>
                                            <Setter Property="Background" Value="Transparent"/>
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding DisplayText}" TextWrapping="NoWrap"
                                                       FontFamily="Consolas" FontSize="10">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsError}" Value="True">
                                                                <Setter Property="Foreground" Value="#F85149"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsWarning}" Value="True">
                                                                <Setter Property="Foreground" Value="#D29922"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- ROW 1: Espace rÃ©servÃ© (indicateur section supprimÃ©) -->

                    <!-- ================================================================== -->
                    <!-- ROW 2: ANNEAU DE PROGRESSION - CORRECTION DÃ‰FINITIVE CLIPPING    -->
                    <!-- ================================================================== -->
                    <!-- 
                    CALCUL REQUIREDRINGSIZE (formule V2 - marge trÃ¨s confortable):
                    â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
                    BaseDiameter     = 300   (rayon 150 Ã— 2)
                    GlowBlurRadius   = 30    (BlurRadius max sur les effets)
                    StrokeThickMax   = 14    (anneau segmentÃ©)
                    
                    GlowMargin       = (GlowBlurRadius + StrokeThickMax) Ã— 2 = (30 + 14) Ã— 2 = 88
                    SafetyMargin     = 32    (buffer DPI scaling 150% + arrondis)
                    InternalPadding  = 30    (espace absorbeur dans le Border)
                    
                    RequiredRingSize = BaseDiameter + GlowMargin + SafetyMargin + InternalPadding
                                     = 300 + 88 + 32 + 30 = 450
                    -->
                    <Grid x:Name="RingRowContainer" Grid.Row="2" ClipToBounds="False" 
                          HorizontalAlignment="Center" VerticalAlignment="Center"
                          UseLayoutRounding="True">
                        
                        <!-- CONTENEUR ANTI-CLIPPING: 450x450 = marge trÃ¨s confortable -->
                        <Border x:Name="RingOuterBorder" Width="450" Height="450" 
                                ClipToBounds="False" Padding="25"
                                UseLayoutRounding="True" SnapsToDevicePixels="True">
                        <Grid x:Name="RingInnerContainer" ClipToBounds="False">
                            <Grid.Resources>
                                <Storyboard x:Key="ScanSpinnerRotation">
                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                                     From="0" To="360" Duration="0:0:1"
                                                     RepeatBehavior="Forever"/>
                                </Storyboard>
                            </Grid.Resources>
                            
                            <!-- COUCHE 1: Piste de fond (cercle gris) - 300x300, rayon 150 -->
                            <Ellipse Width="300" Height="300"
                                     HorizontalAlignment="Center" VerticalAlignment="Center"
                                     Stroke="{StaticResource BackgroundLightBrush}" 
                                     StrokeThickness="8"/>

                            <!-- COUCHE 2: Arc de progression avec glow - 300x300, rayon 150 -->
                            <!-- Glow: BlurRadius=20 Ã©tend de 20px dans toutes les directions -->
                            <Grid Width="300" Height="300"
                                  HorizontalAlignment="Center" VerticalAlignment="Center"
                                  ClipToBounds="False"
                                  Visibility="{Binding IsScanning, Converter={StaticResource BoolToVisibility}}"
                                  Opacity="{Binding ProgressPercent, Converter={StaticResource ProgressToOpacity}}">
                                <Grid.Effect>
                                    <DropShadowEffect Color="{StaticResource AccentRed}"
                                                      BlurRadius="20" ShadowDepth="0" Opacity="0.8"/>
                                </Grid.Effect>
                                <Path Width="300" Height="300"
                                      StrokeThickness="10"
                                      StrokeStartLineCap="Round"
                                      StrokeEndLineCap="Round"
                                      Data="{Binding ProgressPercent, Converter={StaticResource ProgressToArc}, ConverterParameter=150}">
                                    <Path.Stroke>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="{StaticResource AccentRed}" Offset="0"/>
                                            <GradientStop Color="#FFFF8B94" Offset="0.5"/>
                                            <GradientStop Color="{StaticResource AccentRed}" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Path.Stroke>
                                </Path>
                            </Grid>

                            <!-- COUCHE 3: Arc de progression principal - 300x300, rayon 150 -->
                            <Path Width="300" Height="300"
                                  HorizontalAlignment="Center" VerticalAlignment="Center"
                                  Stroke="{StaticResource AccentRedBrush}"
                                  StrokeThickness="8"
                                  StrokeStartLineCap="Round"
                                  StrokeEndLineCap="Round"
                                  Data="{Binding ProgressPercent, Converter={StaticResource ProgressToArc}, ConverterParameter=150}"
                                  Visibility="{Binding IsScanning, Converter={StaticResource BoolToVisibility}}"/>
                            
                            <!-- COUCHE 4: Cercle dÃ©coratif gradient - 300x300 -->
                            <Ellipse Width="300" Height="300"
                                     HorizontalAlignment="Center" VerticalAlignment="Center"
                                     StrokeThickness="2"
                                     Visibility="{Binding IsScanning, Converter={StaticResource BoolToVisibility}}">
                                <Ellipse.Stroke>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="{StaticResource AccentRed}" Offset="0"/>
                                        <GradientStop Color="Transparent" Offset="0.5"/>
                                        <GradientStop Color="{StaticResource AccentRed}" Offset="1"/>
                                    </LinearGradientBrush>
                                </Ellipse.Stroke>
                            </Ellipse>

                            <!-- COUCHE 5: Anneau rotatif segmentÃ© - 280x280 -->
                            <Grid Width="280" Height="280"
                                  HorizontalAlignment="Center" VerticalAlignment="Center"
                                  ClipToBounds="False"
                                  Visibility="{Binding IsScanning, Converter={StaticResource BoolToVisibility}}"
                                  IsHitTestVisible="False" RenderTransformOrigin="0.5,0.5">
                                <Grid.RenderTransform>
                                    <RotateTransform/>
                                </Grid.RenderTransform>
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsScanning}" Value="True">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard x:Name="ScanRingStoryboard" Storyboard="{StaticResource ScanSpinnerRotation}"/>
                                                </DataTrigger.EnterActions>
                                                <DataTrigger.ExitActions>
                                                    <StopStoryboard BeginStoryboardName="ScanRingStoryboard"/>
                                                </DataTrigger.ExitActions>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                                <Ellipse Width="280" Height="280"
                                         Stroke="{StaticResource AccentRedBrush}"
                                         StrokeThickness="14"
                                         StrokeDashArray="0.04 0.96"/>
                            </Grid>

                            <!-- COUCHE 6: Bouton central - 240x240 -->
                            <Grid Width="240" Height="240"
                                  HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Button Command="{Binding StartScanCommand}"
                                    IsEnabled="{Binding CanStartScan}"
                                    Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Grid>
                                            <Ellipse x:Name="ButtonBackground">
                                                <Ellipse.Fill>
                                                    <RadialGradientBrush GradientOrigin="0.3,0.3">
                                                        <GradientStop Color="#FF2D333B" Offset="0"/>
                                                        <GradientStop Color="#FF161B22" Offset="1"/>
                                                    </RadialGradientBrush>
                                                </Ellipse.Fill>
                                                <Ellipse.Effect>
                                                    <DropShadowEffect Color="{StaticResource AccentRed}" 
                                                                      BlurRadius="30" ShadowDepth="0" Opacity="0.5"/>
                                                </Ellipse.Effect>
                                            </Ellipse>
                                            
                                            <Ellipse Stroke="{StaticResource AccentRedBrush}" 
                                                     StrokeThickness="2" Margin="10"/>
                                        </Grid>
                                        
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="ButtonBackground" Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect Color="{StaticResource AccentRed}" 
                                                                      BlurRadius="50" ShadowDepth="0" Opacity="0.8"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                                <StackPanel Visibility="{Binding IsIdle, Converter={StaticResource BoolToVisibility}}"
                                            IsHitTestVisible="False">
                                    <TextBlock Text="{Binding ScanButtonText}" FontSize="22" FontWeight="Bold"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding ScanButtonSubtext}" FontSize="10"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                </StackPanel>
                                
                                <StackPanel Visibility="{Binding IsScanning, Converter={StaticResource BoolToVisibility}}"
                                            HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding ScanButtonText}" 
                                               FontSize="18" FontWeight="Bold"
                                               Foreground="{StaticResource AccentRedBrush}"
                                               HorizontalAlignment="Center"
                                               TextAlignment="Center"
                                               TextWrapping="Wrap"
                                               MaxWidth="170"
                                               IsHitTestVisible="False"/>
                                    <TextBlock Text="{Binding CurrentStep}" 
                                               FontSize="10" Margin="0,5,0,10"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               HorizontalAlignment="Center"
                                               TextTrimming="CharacterEllipsis"
                                               MaxWidth="160" TextAlignment="Center"
                                               IsHitTestVisible="False"/>
                                    <Button Content="{Binding CancelButtonText}" Width="60" Height="40"
                                            FontSize="12" Padding="0"
                                            Style="{StaticResource FuturisticButton}"
                                            Command="{Binding CancelScanCommand}"
                                            ToolTip="{Binding CancelButtonText}"/>
                                </StackPanel>
                                
                                <StackPanel Visibility="{Binding IsCompleted, Converter={StaticResource BoolToVisibility}}"
                                            HorizontalAlignment="Center"
                                            IsHitTestVisible="False">
                                    <TextBlock Text="{Binding ScoreDisplay}" 
                                               FontSize="48" FontWeight="Bold"
                                               Foreground="{Binding GradeDisplay, Converter={StaticResource GradeToColor}}"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="/100" FontSize="14"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               HorizontalAlignment="Center" Margin="0,-5,0,5"/>
                                    <Border CornerRadius="4" Padding="12,4"
                                            Background="{Binding GradeDisplay, Converter={StaticResource GradeToColor}}"
                                            HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding GradeDisplay}" 
                                                   FontSize="18" FontWeight="Bold"
                                                   Foreground="White"/>
                                    </Border>
                                </StackPanel>
                                
                                <StackPanel Visibility="{Binding IsError, Converter={StaticResource BoolToVisibility}}"
                                            HorizontalAlignment="Center"
                                            IsHitTestVisible="False">
                                    <TextBlock Text="âŒ" FontSize="48" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Erreur" FontSize="14"
                                               Foreground="{StaticResource AccentRedBrush}"
                                               HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                    <TextBlock Text="{Binding ErrorMessage}" FontSize="10"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               HorizontalAlignment="Center" Margin="0,5,0,0"
                                               TextWrapping="Wrap" MaxWidth="180"
                                               TextAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                        </Grid><!-- Fermeture RingInnerContainer -->
                        </Border><!-- Fermeture RingOuterBorder 400x400 -->
                    </Grid><!-- Fermeture RingRowContainer -->
                </Grid>

                <!-- Panneau droit : progression informative -->
                <Border Grid.Column="1" Background="{StaticResource BackgroundMediumBrush}" 
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="1,0,0,0"
                        Padding="20,24">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*" MinHeight="120"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" FontSize="16" FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,16">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="ðŸ“Š {0}">
                                    <Binding Path="HealthProgressTitle"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                        
                        <Border Grid.Row="1" Style="{StaticResource PanelBorder}" Margin="0,0,0,12">
                            <StackPanel>
                                <TextBlock Text="{Binding ElapsedTimeLabel}" FontSize="11"
                                           Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                                <TextBlock Text="{Binding ElapsedTime}" FontSize="22" FontWeight="Bold"
                                           Foreground="{StaticResource AccentRedBrush}"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Section courante supprimÃ©e (inutile) -->

                        <Border Grid.Row="2" Style="{StaticResource PanelBorder}" Margin="0,0,0,12">
                            <StackPanel>
                                <TextBlock Text="Ã‰tapes" FontSize="11" FontWeight="SemiBold"
