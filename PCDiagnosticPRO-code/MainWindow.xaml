<Window x:Class="PCDiagnosticPro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:PCDiagnosticPro.ViewModels"
        xmlns:conv="clr-namespace:PCDiagnosticPro.Converters"
        xmlns:ctrl="clr-namespace:PCDiagnosticPro.Controls"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="PC Diagnostic Pro" 
        Height="800" Width="1100"
        MinHeight="700" MinWidth="900"
        Background="{StaticResource BackgroundDarkBrush}"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <conv:StatusToColorConverter x:Key="StatusToColor"/>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <conv:GradeToColorConverter x:Key="GradeToColor"/>
        <conv:InverseBoolConverter x:Key="InverseBool"/>
        <conv:ProgressToBlurConverter x:Key="ProgressToBlur"/>
        <conv:ProgressToOpacityConverter x:Key="ProgressToOpacity"/>
        <conv:ProgressToArcConverter x:Key="ProgressToArc"/>
        <conv:HealthSeverityToColorConverter x:Key="SeverityToColor"/>
        <conv:HealthSeverityToIconConverter x:Key="SeverityToIcon"/>
        <conv:ScoreToHealthColorConverter x:Key="ScoreToHealthColor"/>
        <conv:HealthSeverityToAlertVisibilityConverter x:Key="SeverityToAlertVisibility"/>
        <conv:HexToSolidColorBrushConverter x:Key="HexToColorBrush"/>
        <sys:Double x:Key="CompactPanelHeight">140</sys:Double>
        
        <!-- Style pour texte sÃ©lectionnable et copiable dans les tableaux -->
        <Style x:Key="SelectableTextStyle" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Cursor" Value="IBeam"/>
            <Setter Property="ContextMenu">
                <Setter.Value>
                    <ContextMenu>
                        <MenuItem Header="Copier" Command="ApplicationCommands.Copy"/>
                        <MenuItem Header="Tout sÃ©lectionner" Command="ApplicationCommands.SelectAll"/>
                    </ContextMenu>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SelectableTextSecondaryStyle" TargetType="TextBox" BasedOn="{StaticResource SelectableTextStyle}">
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- BARRE LATERALE GAUCHE -->
        <Border Grid.Column="0" Background="{StaticResource BackgroundMediumBrush}" 
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0">
            <StackPanel VerticalAlignment="Top" Margin="0,20,0,0">
                
                <!-- Logo -->
                <Border Width="50" Height="50" CornerRadius="25" 
                        Background="{StaticResource AccentRedBrush}" Margin="0,0,0,30"
                        HorizontalAlignment="Center">
                    <TextBlock Text="âš¡" FontSize="24" HorizontalAlignment="Center" 
                               VerticalAlignment="Center" Foreground="White"/>
                </Border>

                <!-- Bouton Accueil -->
                <Button Width="50" Height="50" Margin="0,5" Padding="0" 
                        ToolTip="{Binding NavHomeTooltip}" Cursor="Hand"
                        Command="{Binding NavigateToScannerCommand}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource FuturisticButton}">
                            <Setter Property="Background" Value="{StaticResource BackgroundLightBrush}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsScannerView}" Value="True">
                                    <Setter Property="Background" Value="{StaticResource AccentRedBrush}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <TextBlock Text="ðŸ " FontSize="20"/>
                </Button>

                <!-- Bouton Scan -->
                <Button Width="50" Height="50" Margin="0,5" Padding="0" 
                        ToolTip="{Binding NavScanTooltip}" Cursor="Hand"
                        Command="{Binding NavigateToHealthcheckCommand}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource FuturisticButton}">
                            <Setter Property="Background" Value="{StaticResource BackgroundLightBrush}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsHealthcheckView}" Value="True">
                                    <Setter Property="Background" Value="{StaticResource AccentRedBrush}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <TextBlock Text="ðŸ”" FontSize="20"/>
                </Button>
                
                <!-- Bouton Rapports -->
                <Button Width="50" Height="50" Margin="0,5" Padding="0" 
                        ToolTip="{Binding NavReportsTooltip}" Cursor="Hand"
                        Command="{Binding NavigateToResultsCommand}"
                        IsEnabled="{Binding HasAnyScan}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource FuturisticButton}">
                            <Setter Property="Background" Value="{StaticResource BackgroundLightBrush}"/>
                            <Setter Property="Opacity" Value="0.4"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsResultsView}" Value="True">
                                    <Setter Property="Background" Value="{StaticResource AccentRedBrush}"/>
                                    <Setter Property="Opacity" Value="1"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding HasAnyScan}" Value="True">
                                    <Setter Property="Opacity" Value="1"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <TextBlock Text="ðŸ“Š" FontSize="20"/>
                </Button>
                
                <!-- Bouton Parametres -->
                <Button Width="50" Height="50" Margin="0,5" Padding="0" 
                        ToolTip="{Binding NavSettingsTooltip}" Cursor="Hand"
                        Command="{Binding NavigateToSettingsCommand}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource FuturisticButton}">
                            <Setter Property="Background" Value="{StaticResource BackgroundLightBrush}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsSettingsView}" Value="True">
                                    <Setter Property="Background" Value="{StaticResource AccentRedBrush}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <TextBlock Text="âš™ï¸" FontSize="20"/>
                </Button>
            </StackPanel>
        </Border>

        <!-- ZONE PRINCIPALE â€” ClipToBounds=False pour permettre le glow des Ã©lÃ©ments -->
        <Grid Grid.Column="1" Margin="30" ClipToBounds="False">
            
            <!-- VUE HOME -->
            <Grid Visibility="{Binding IsScannerView, Converter={StaticResource BoolToVisibility}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,0,0,40" HorizontalAlignment="Center">
                    <Grid>
                        <TextBlock Text="{Binding HomeTitle}" FontSize="32" FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimaryBrush}" TextAlignment="Center">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2" Opacity="0.6"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock Text="{Binding HomeTitle}" FontSize="32" FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimaryBrush}" TextAlignment="Center">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="{StaticResource AccentRed}" BlurRadius="30" ShadowDepth="0" Opacity="0.9"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </Grid>
                    <TextBlock Text="{Binding HomeSubtitle}" FontSize="16"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,10,0,0"
                               TextAlignment="Center"/>
                </StackPanel>

                <UniformGrid Grid.Row="1" Columns="2">
                    <!-- Carte Scan -->
                    <Border Margin="15" Cursor="Hand" Style="{StaticResource CardStyle}">
                        <Border.InputBindings>
                            <MouseBinding MouseAction="LeftClick" Command="{Binding NavigateToHealthcheckCommand}"/>
                        </Border.InputBindings>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="40">
                            <TextBlock Text="âš¡" FontSize="64" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                            <TextBlock Text="{Binding HomeScanTitle}" FontSize="28" FontWeight="Bold" 
                                       Foreground="{StaticResource TextPrimaryBrush}" 
                                       HorizontalAlignment="Center" Margin="0,0,0,15"/>
                            <TextBlock Text="{Binding HomeScanAction}" FontSize="12" FontWeight="SemiBold"
                                       Foreground="{StaticResource AccentRedBrush}"
                                       HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding HomeScanDescription}" 
                                       FontSize="14" Foreground="{StaticResource TextSecondaryBrush}"
                                       TextWrapping="Wrap" TextAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Carte Chat -->
                    <Border Margin="15" Cursor="Hand" Style="{StaticResource CardStyle}">
                        <Border.InputBindings>
                            <MouseBinding MouseAction="LeftClick" Command="{Binding NavigateToChatCommand}"/>
                        </Border.InputBindings>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="40">
                            <TextBlock Text="ðŸ¤–" FontSize="64" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                            <TextBlock Text="{Binding HomeChatTitle}" FontSize="28" FontWeight="Bold" 
                                       Foreground="{StaticResource TextPrimaryBrush}" 
                                       HorizontalAlignment="Center" Margin="0,0,0,15"/>
                            <TextBlock Text="{Binding HomeChatAction}" FontSize="12" FontWeight="SemiBold"
                                       Foreground="{StaticResource AccentRedBrush}"
                                       HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding HomeChatDescription}" 
                                       FontSize="14" Foreground="{StaticResource TextSecondaryBrush}"
                                       TextWrapping="Wrap" TextAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>
            </Grid>

            <!-- VUE HEALTHCHECK â€” scrollbar Ã  l'extrÃªme droite de la fenÃªtre.
                 Margin="0,0,-30,0" annule le padding-right du parent (Margin="30") pour
                 que le scrollbar touche le bord droit du viewport.
                 VerticalScrollBarVisibility="Visible" rÃ©serve toujours l'espace â†’ zÃ©ro reflow. -->
            <ScrollViewer Visibility="{Binding IsHealthcheckView, Converter={StaticResource BoolToVisibility}}"
                          Margin="0,0,-30,0"
                          VerticalScrollBarVisibility="Visible"
                          HorizontalScrollBarVisibility="Disabled"
                          CanContentScroll="True"
                          ClipToBounds="True">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" MinWidth="400"/>
                        <ColumnDefinition Width="280"/>
                    </Grid.ColumnDefinitions>
                    <!-- Colonne gauche : grille 3 lignes (scroll gÃ©rÃ© par le ScrollViewer parent). -->
                    <Grid Grid.Column="0" MinWidth="480" Margin="24,0,20,8" ClipToBounds="False">
                    <Grid.RowDefinitions>
                        <!-- FIX #3: Live feed Ã©largi (150px) pour section active + progress bar + log -->
                        <RowDefinition Height="150"/>
                        <RowDefinition Height="Auto"/>
                        <!-- MinHeight=540 : doit recevoir au moins 540px (RingRowContainer 500 + Margin 10*2 = 520) -->
                        <RowDefinition Height="*" MinHeight="540"/>
                    </Grid.RowDefinitions>

                    <!-- ROW 0: Live feed amÃ©liorÃ© â€” Section active + progress bar + flux rapide -->
                    <Border Grid.Row="0" Background="#161B22" CornerRadius="12" Padding="12,8"
                            BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                            Margin="0,0,0,12" ClipToBounds="True">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>  <!-- Titre + section active -->
                                <RowDefinition Height="Auto"/>  <!-- Progress bar -->
                                <RowDefinition Height="*"/>     <!-- Log dÃ©filant -->
                            </Grid.RowDefinitions>
                            
                            <!-- Ligne 0: Titre feed + Section en cours (toujours visible) -->
                            <Grid Grid.Row="0" Margin="0,0,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" FontWeight="SemiBold" FontSize="11"
                                           Foreground="{StaticResource AccentRedBrush}" VerticalAlignment="Center">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="ðŸ“¡ {0}">
                                            <Binding Path="LiveFeedLabel"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                                <!-- Section en cours: pulsation subtile pendant le scan -->
                                <TextBlock Grid.Column="1" Text="{Binding CurrentSectionDisplay}"
                                           FontSize="10" FontWeight="SemiBold" FontFamily="Consolas"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           HorizontalAlignment="Right" VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis" MaxWidth="250">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsScanning}" Value="True">
                                                    <DataTrigger.EnterActions>
                                                        <BeginStoryboard x:Name="SectionPulse">
                                                            <Storyboard RepeatBehavior="Forever">
                                                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                                 From="0.5" To="1" Duration="0:0:1"
                                                                                 AutoReverse="True"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.EnterActions>
                                                    <DataTrigger.ExitActions>
                                                        <StopStoryboard BeginStoryboardName="SectionPulse"/>
                                                    </DataTrigger.ExitActions>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                            
                            <!-- Ligne 1: Barre de progression linÃ©aire (4px, slim, moderne) -->
                            <ProgressBar Grid.Row="1" Height="4" Margin="0,0,0,6"
                                         Minimum="0" Maximum="100"
                                         Value="{Binding ProgressPercent, Mode=OneWay}"
                                         Foreground="{StaticResource AccentRedBrush}"
                                         Background="#30363D" BorderThickness="0"
                                         Visibility="{Binding IsScanning, Converter={StaticResource BoolToVisibility}}"
                                         AutomationProperties.Name="Scan progress">
                                <ProgressBar.Clip>
                                    <RectangleGeometry RadiusX="2" RadiusY="2" Rect="0,0,10000,4"/>
                                </ProgressBar.Clip>
                            </ProgressBar>
                            
                            <!-- Ligne 2: Log dÃ©filant rapide avec virtualization -->
                            <Grid Grid.Row="2" ClipToBounds="True">
                                <ListBox ItemsSource="{Binding FilteredLiveFeedItems}"
                                         Background="Transparent" BorderThickness="0"
                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                                         ScrollViewer.CanContentScroll="False"
                                         IsSynchronizedWithCurrentItem="True"
                                         FontFamily="Consolas" FontSize="10"
                                         Padding="0,2"
                                         VirtualizingPanel.IsVirtualizing="True"
                                         VirtualizingPanel.VirtualizationMode="Recycling">
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                            <Setter Property="Padding" Value="0,1"/>
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="Margin" Value="0"/>
                                            <!-- Highlight flash on load (newest item highlight) -->
                                            <Style.Triggers>
                                                <EventTrigger RoutedEvent="Loaded">
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                             From="1" To="0.7" Duration="0:0:0.6"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding DisplayText}" TextWrapping="NoWrap"
                                                       FontFamily="Consolas" FontSize="10">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsError}" Value="True">
                                                                <Setter Property="Foreground" Value="#F85149"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsWarning}" Value="True">
                                                                <Setter Property="Foreground" Value="#D29922"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- ROW 1: Espace rÃ©servÃ© -->

                    <!-- ================================================================== -->
                    <!-- ROW 2: ANNEAU DE PROGRESSION - AUCUN CLIPPING (Ã©quivalent overflow:visible) -->
                    <!-- ================================================================== -->
                    <!-- 
                    Formule Ã©tendue visuelle: (radiusÃ—2) + (strokeÃ—2) + (blurÃ—2) + marge_sÃ©curitÃ©
                    radius=150 â†’ 300, max stroke=14 â†’ 28, blur=50 â†’ 100, marge=32 â†’ 460.
                    Fix 1 (converter) : centre dÃ©calÃ© Ã  (radius+10, radius+10) dans un viewport 300Ã—300
                    pour que le stroke (8-10px) ne dÃ©passe jamais les bounds du Path.
                    Fix 2 (layout) : Margin rÃ©duit de 60â†’10, MinHeight de 580â†’500 pour Ã©viter LayoutClip
                    (580+120=700 > Row2 600 â†’ LayoutClip Ã  480). Maintenant 500+20=520 < 540.
                    Viewbox supprimÃ© : il clippait les DropShadowEffect via son ContainerVisual interne.
                    ClipToBounds=False sur TOUTE la hiÃ©rarchie (Border, Grid).
                    -->
                    <Grid x:Name="RingRowContainer" Grid.Row="2" ClipToBounds="False" 
                          MinWidth="500" MinHeight="500"
                          HorizontalAlignment="Center" VerticalAlignment="Center"
                          UseLayoutRounding="True" Margin="10">
                        
                        <!-- Viewbox supprimÃ© : il clippait les DropShadowEffect via son ContainerVisual interne.
                             Le RingOuterBorder est enfant direct du RingRowContainer (500Ã—500 min, Margin=10),
                             laissant 20px de marge par cÃ´tÃ© pour les effets de glow. -->
                        <Border x:Name="RingOuterBorder" Width="460" Height="460" MinWidth="460" MinHeight="460"
                                ClipToBounds="False" Padding="20"
                                HorizontalAlignment="Center" VerticalAlignment="Center"
                                UseLayoutRounding="True" SnapsToDevicePixels="True">
                        <Grid x:Name="RingInnerContainer" ClipToBounds="False">
                            <Grid.Resources>
                                <Storyboard x:Key="ScanSpinnerRotation">
                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                                     From="0" To="360" Duration="0:0:1"
                                                     RepeatBehavior="Forever"/>
                                </Storyboard>
                            </Grid.Resources>
                            
                            <!-- COUCHE 1: Piste de fond (cercle gris) - 280x280, rayon 140 -->
                            <Ellipse Width="280" Height="280"
                                     HorizontalAlignment="Center" VerticalAlignment="Center"
                                     Stroke="{StaticResource BackgroundLightBrush}" 
                                     StrokeThickness="8"/>

                            <!-- COUCHE 2: Arc de progression avec glow
                                 Viewport 300Ã—300 = 2Ã—(radius 140 + padding 10) pour que le stroke ne dÃ©passe pas les bounds -->
                            <Border Padding="50" ClipToBounds="False" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Grid Width="300" Height="300"
                                      HorizontalAlignment="Center" VerticalAlignment="Center"
                                      ClipToBounds="False"
                                      Visibility="{Binding IsScanning, Converter={StaticResource BoolToVisibility}}"
                                      Opacity="{Binding ProgressPercent, Converter={StaticResource ProgressToOpacity}}">
                                    <Grid.Effect>
                                        <DropShadowEffect Color="{StaticResource AccentRed}"
                                                          BlurRadius="20" ShadowDepth="0" Opacity="0.8"/>
                                    </Grid.Effect>
                                    <Path Width="300" Height="300"
                                          StrokeThickness="10"
                                          StrokeStartLineCap="Round"
                                          StrokeEndLineCap="Round"
                                          Data="{Binding ProgressPercent, Converter={StaticResource ProgressToArc}, ConverterParameter=140}">
                                        <Path.Stroke>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="{StaticResource AccentRed}" Offset="0"/>
                                                <GradientStop Color="#FFFF8B94" Offset="0.5"/>
                                                <GradientStop Color="{StaticResource AccentRed}" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Path.Stroke>
                                    </Path>
                                </Grid>
                            </Border>

                            <!-- COUCHE 3: Arc de progression principal - 300x300 viewport, rayon 140 -->
                            <Path Width="300" Height="300"
                                  HorizontalAlignment="Center" VerticalAlignment="Center"
                                  Stroke="{StaticResource AccentRedBrush}"
                                  StrokeThickness="8"
                                  StrokeStartLineCap="Round"
                                  StrokeEndLineCap="Round"
                                  Data="{Binding ProgressPercent, Converter={StaticResource ProgressToArc}, ConverterParameter=140}"
                                  Visibility="{Binding IsScanning, Converter={StaticResource BoolToVisibility}}"/>
                            
                            <!-- COUCHE 4: Cercle dÃ©coratif gradient - 280x280 -->
                            <Ellipse Width="280" Height="280"
                                     HorizontalAlignment="Center" VerticalAlignment="Center"
                                     StrokeThickness="2"
                                     Visibility="{Binding IsScanning, Converter={StaticResource BoolToVisibility}}">
                                <Ellipse.Stroke>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="{StaticResource AccentRed}" Offset="0"/>
                                        <GradientStop Color="Transparent" Offset="0.5"/>
                                        <GradientStop Color="{StaticResource AccentRed}" Offset="1"/>
                                    </LinearGradientBrush>
                                </Ellipse.Stroke>
                            </Ellipse>

                            <!-- COUCHE 5: Anneau rotatif segmentÃ© - 260x260 -->
                            <Grid Width="260" Height="260"
                                  HorizontalAlignment="Center" VerticalAlignment="Center"
                                  ClipToBounds="False"
                                  Visibility="{Binding IsScanning, Converter={StaticResource BoolToVisibility}}"
                                  IsHitTestVisible="False" RenderTransformOrigin="0.5,0.5">
                                <Grid.RenderTransform>
                                    <RotateTransform/>
                                </Grid.RenderTransform>
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsScanning}" Value="True">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard x:Name="ScanRingStoryboard" Storyboard="{StaticResource ScanSpinnerRotation}"/>
                                                </DataTrigger.EnterActions>
                                                <DataTrigger.ExitActions>
                                                    <StopStoryboard BeginStoryboardName="ScanRingStoryboard"/>
                                                </DataTrigger.ExitActions>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                                <Ellipse Width="260" Height="260"
                                         Stroke="{StaticResource AccentRedBrush}"
                                         StrokeThickness="14"
                                         StrokeDashArray="0.04 0.96"/>
                            </Grid>

                            <!-- COUCHE 6: Bouton central - padding pour glow BlurRadius=50 -->
                            <Border Padding="50" ClipToBounds="False" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Grid Width="240" Height="240"
                                      HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Button Command="{Binding StartScanCommand}"
                                    IsEnabled="{Binding CanStartScan}"
                                    Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Grid>
                                            <Ellipse x:Name="ButtonBackground">
                                                <Ellipse.Fill>
                                                    <RadialGradientBrush GradientOrigin="0.3,0.3">
                                                        <GradientStop Color="#FF2D333B" Offset="0"/>
                                                        <GradientStop Color="#FF161B22" Offset="1"/>
                                                    </RadialGradientBrush>
                                                </Ellipse.Fill>
                                                <Ellipse.Effect>
                                                    <DropShadowEffect Color="{StaticResource AccentRed}" 
                                                                      BlurRadius="30" ShadowDepth="0" Opacity="0.5"/>
                                                </Ellipse.Effect>
                                            </Ellipse>
                                            
                                            <Ellipse Stroke="{StaticResource AccentRedBrush}" 
                                                     StrokeThickness="2" Margin="10"/>
                                        </Grid>
                                        
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="ButtonBackground" Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect Color="{StaticResource AccentRed}" 
                                                                      BlurRadius="50" ShadowDepth="0" Opacity="0.8"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                                </Grid>
                            </Border>

                            <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                                <StackPanel Visibility="{Binding IsIdle, Converter={StaticResource BoolToVisibility}}"
                                            IsHitTestVisible="False">
                                    <TextBlock Text="{Binding ScanButtonText}" FontSize="22" FontWeight="Bold"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding ScanButtonSubtext}" FontSize="10"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                </StackPanel>
                                
                                <StackPanel Visibility="{Binding IsScanning, Converter={StaticResource BoolToVisibility}}"
                                            HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding ScanButtonText}" 
                                               FontSize="18" FontWeight="Bold"
                                               Foreground="{StaticResource AccentRedBrush}"
                                               HorizontalAlignment="Center"
                                               TextAlignment="Center"
                                               TextWrapping="Wrap"
                                               MaxWidth="170"
                                               IsHitTestVisible="False"/>
                                    <TextBlock Text="{Binding CurrentStep}" 
                                               FontSize="10" Margin="0,5,0,10"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               HorizontalAlignment="Center"
                                               TextTrimming="CharacterEllipsis"
                                               MaxWidth="160" TextAlignment="Center"
                                               IsHitTestVisible="False"/>
