<Window x:Class="PCDiagnosticPro.Views.CollectorErrorsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Erreurs collecteur" 
        Height="300" Width="500"
        MinHeight="200" MinWidth="400"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterOwner"
        Background="#F0F0F0">

    <!-- Fenêtre style MessageBox simple comme demandé -->
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Icône warning (triangle jaune avec !) -->
        <Canvas Grid.Column="0" Grid.Row="0" Width="48" Height="48" 
                VerticalAlignment="Top" Margin="0,0,15,0">
            <Path Fill="#D4A017" Data="M 24 2 L 46 44 L 2 44 Z"/>
            <Path Fill="Black" Data="M 22 18 L 26 18 L 26 30 L 22 30 Z M 22 34 L 26 34 L 26 38 L 22 38 Z"/>
        </Canvas>

        <!-- Contenu textuel -->
        <StackPanel Grid.Column="1" Grid.Row="0" VerticalAlignment="Top">
            <!-- Erreurs -->
            <TextBlock Text="Erreurs:" FontWeight="Bold" Margin="0,0,0,5"
                       Visibility="{Binding HasErrors, Converter={StaticResource BoolToVisibility}}"/>
            <ItemsControl ItemsSource="{Binding ErrorListSimple}" Margin="0,0,0,10"
                          Visibility="{Binding HasErrors, Converter={StaticResource BoolToVisibility}}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" TextWrapping="Wrap" Margin="0,2"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            
            <!-- Données manquantes -->
            <TextBlock Text="Données manquantes:" FontWeight="Bold" Margin="0,0,0,5"
                       Visibility="{Binding HasMissing, Converter={StaticResource BoolToVisibility}}"/>
            <ItemsControl ItemsSource="{Binding MissingListSimple}" Margin="0,0,0,10"
                          Visibility="{Binding HasMissing, Converter={StaticResource BoolToVisibility}}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" TextWrapping="Wrap" Margin="0,2"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <!-- Bouton OK -->
        <Button Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" 
                Content="OK" Width="80" Height="28"
                HorizontalAlignment="Right"
                Click="CloseButton_Click"/>
    </Grid>
</Window>
