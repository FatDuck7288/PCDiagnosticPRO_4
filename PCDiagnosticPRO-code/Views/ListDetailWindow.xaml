<Window x:Class="PCDiagnosticPro.Views.ListDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" 
        Height="450" Width="700"
        MinHeight="300" MinWidth="500"
        Background="{StaticResource BackgroundDarkBrush}"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="{Binding SummaryText}" FontSize="12"
                   Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,10"
                   TextWrapping="Wrap"/>

        <ListBox Grid.Row="1" ItemsSource="{Binding Items}"
                 Background="{StaticResource BackgroundMediumBrush}"
                 BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                 Foreground="{StaticResource TextPrimaryBrush}"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Padding" Value="8,4"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        <Button Grid.Row="2" Content="Fermer" Margin="0,15,0,0"
                Style="{StaticResource FuturisticButton}"
                Click="CloseButton_Click"
                Padding="20,10" HorizontalAlignment="Right"/>
    </Grid>
</Window>
