<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- ==================== THÈME EMPIRE STAR WARS ==================== -->
    <!-- Style inspiré de l'Empire Galactique : noir charcoal, accents rouges, sobre et premium -->
    
    <!-- COULEURS EMPIRE (overrides pour basculer le thème) -->
    <!-- Ces ressources utilisent les mêmes clés que FuturisticStyles.xaml pour permettre le remplacement dynamique -->
    
    <Color x:Key="BackgroundDark">#FF0A0A0A</Color>
    <Color x:Key="BackgroundMedium">#FF121212</Color>
    <Color x:Key="BackgroundLight">#FF1A1A1A</Color>
    <Color x:Key="AccentRed">#FFCC0000</Color>
    <Color x:Key="AccentRedDark">#FF990000</Color>
    <Color x:Key="AccentGreen">#FF00CC66</Color>
    <Color x:Key="AccentYellow">#FFCC9900</Color>
    <Color x:Key="AccentBlue">#FF0066CC</Color>
    <Color x:Key="TextPrimary">#FFD0D0D0</Color>
    <Color x:Key="TextSecondary">#FF808080</Color>
    <Color x:Key="BorderColor">#FF333333</Color>
    
    <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource BackgroundDark}"/>
    <SolidColorBrush x:Key="BackgroundMediumBrush" Color="{StaticResource BackgroundMedium}"/>
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="{StaticResource BackgroundLight}"/>
    <SolidColorBrush x:Key="AccentRedBrush" Color="{StaticResource AccentRed}"/>
    <SolidColorBrush x:Key="AccentRedDarkBrush" Color="{StaticResource AccentRedDark}"/>
    <SolidColorBrush x:Key="AccentGreenBrush" Color="{StaticResource AccentGreen}"/>
    <SolidColorBrush x:Key="AccentYellowBrush" Color="{StaticResource AccentYellow}"/>
    <SolidColorBrush x:Key="AccentBlueBrush" Color="{StaticResource AccentBlue}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>

    <!-- EFFETS GLOW EMPIRE (rouge plus intense, style Sith) -->
    <DropShadowEffect x:Key="RedGlow" Color="{StaticResource AccentRed}" BlurRadius="40" ShadowDepth="0" Opacity="0.9"/>
    <DropShadowEffect x:Key="RedGlowStrong" Color="{StaticResource AccentRed}" BlurRadius="60" ShadowDepth="0" Opacity="1"/>
    <DropShadowEffect x:Key="GreenGlow" Color="{StaticResource AccentGreen}" BlurRadius="30" ShadowDepth="0" Opacity="0.8"/>
    <DropShadowEffect x:Key="SubtleShadow" Color="Black" BlurRadius="12" ShadowDepth="3" Opacity="0.6"/>

    <!-- POLICE SCI-FI (optionnel - Orbitron si disponible, sinon fallback) -->
    <!-- Pour installer Orbitron: télécharger depuis Google Fonts et ajouter au projet -->
    
</ResourceDictionary>
